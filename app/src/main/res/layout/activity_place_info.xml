<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaceInfoActivity">

    <ImageView
        android:id="@+id/lookImage"
        android:layout_width="365dp"
        android:layout_height="262dp"
        android:contentDescription="@string/place_info_picture_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/usageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/place_info_usage_title"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lookImage"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:id="@+id/usageBody"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:scrollbars="vertical"
        android:text="@string/place_info_usage_body"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usageTitle"
        app:layout_constraintVertical_bias="0.033" />

    <TextView
        android:id="@+id/facilityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/place_info_facility_title"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lookImage"
        app:layout_constraintVertical_bias="0.417" />

    <TextView
        android:id="@+id/facilityBody"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:scrollbars="vertical"
        android:text="@string/place_info_usage_body"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facilityTitle"
        app:layout_constraintVertical_bias="0.108" />

    <Button
        android:id="@+id/openWithMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/place_info_go_here_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usageBody"
        app:layout_constraintVertical_bias="0.753" />

</androidx.constraintlayout.widget.ConstraintLayout>